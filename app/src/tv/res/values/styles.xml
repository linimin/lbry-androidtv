<resources>

    <style name="Widget.Headers.VerticalGridView" parent="Widget.Leanback.Headers.VerticalGridView">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:paddingStart">@dimen/header_collapsed_width</item>
        <item name="android:verticalSpacing">@dimen/header_vertical_spacing</item>
    </style>

    <style name="Widget.HeaderIcons.VerticalGridView" parent="Widget.Leanback.Headers.VerticalGridView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:verticalSpacing">@dimen/header_vertical_spacing</item>
    </style>

    <style name="Widget.HeaderIcons.ImageView" parent="">
        <item name="minHeight">24dp</item>
        <item name="android:layout_height">@dimen/header_icon_height</item>
        <item name="android:layout_width">@dimen/header_icon_width</item>
    </style>

    <style name="Widget.Row.HorizontalGridView" parent="Widget.Leanback.Row.HorizontalGridView">
        <item name="android:horizontalSpacing">@dimen/horizontal_spacing</item>
    </style>

    <style name="Widget.BaseCardViewStyle" parent="Widget.Leanback.BaseCardViewStyle">
        <item name="cardBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="strokeColor">@color/card_border</item>
        <item name="strokeWidth">@dimen/card_view_stroke_width</item>
    </style>

    <style name="Widget.CardView.Outlined.Video">
        <item name="android:layout_height">@dimen/video_card_height</item>
        <item name="android:layout_width">@dimen/video_card_width</item>
    </style>

    <style name="Widget.CardView.Outlined.Channel">
        <item name="android:layout_width">@dimen/channel_card_width</item>
        <item name="android:layout_height">@dimen/channel_card_height</item>
    </style>

    <style name="Widget.CardView.Outlined.Setting">
        <item name="android:layout_height">@dimen/setting_card_height</item>
        <item name="android:layout_width">@dimen/setting_card_width</item>
    </style>

    <style name="Widget.GridItems.VerticalGridView" parent="Widget.Leanback.GridItems.VerticalGridView">
        <item name="android:horizontalSpacing">@dimen/horizontal_spacing</item>
        <item name="android:verticalSpacing">@dimen/vertical_spacing</item>
    </style>

    <style name="Widget.HeaderIcons.Dock" parent="">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/header_collapsed_width</item>
    </style>

    <style name="Widget.Row.Header" parent="Widget.Leanback.Row.Header">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/header_icon_height</item>
        <item name="android:textAppearance">@style/TextAppearance.Header</item>
    </style>

    <style name="TextAppearance.Header" parent="TextAppearance.Leanback.Row.Header">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.ImageCardView.TitleStyle" parent="Widget.Leanback.ImageCardView.TitleStyle">
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.ImageCardView.InfoAreaStyle" parent="Widget.Leanback.ImageCardView.InfoAreaStyle">
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.DetailsDescriptionTitleStyle" parent="Widget.Leanback.DetailsDescriptionTitleStyle">
        <item name="android:textAppearance">@style/TextAppearance.DetailsDescriptionTitle</item>
    </style>

    <style name="TextAppearance.DetailsDescriptionTitle" parent="TextAppearance.Leanback.DetailsDescriptionTitle">
        <item name="android:textSize">@dimen/details_description_title_text_size</item>
    </style>
</resources>
